<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".widgets.CustomButtons"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Gradient Button -->
        <Button
            android:id="@+id/btn_gradient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:text="Gradient Button"
            android:textColor="#FFFFFF"
            android:background="@drawable/gradient_button_background" />

        <!-- Image Background Button -->
        <Button
            android:id="@+id/btn_image"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:text="Image Button"
            android:textColor="#FFFFFF"
            android:background="@drawable/image_button_background" />

        <!-- Material Button -->
        <!-- <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_mat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:text="Material Button"
            android:textColor="#FFFFFF"
            app:cornerRadius="16dp"
            android:backgroundTint="@color/material_dynamic_neutral30"
            app:rippleColor="@color/material_dynamic_neutral80" /> -->

        <!-- Neumorphic Button -->
        <Button
            android:id="@+id/btn_neumorphic"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/neumorphic_button_background"
            android:text="Neumorphic"
            android:textColor="#808080" />
    </LinearLayout>


</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FirstApp"
        tools:targetApi="31">
        <activity
            android:name=".menuss.Option_Menu_1"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".fragmentssss.Fragment_1"
            android:exported="false">
        </activity>
        <activity
            android:name=".fragmentssss.Fragment_0"
            android:exported="false" />
        <activity
            android:name=".intentss.LastIntent"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <!-- Allow the app to handle all types of shared content -->
                <data android:mimeType="text/plain" />
                <data android:mimeType="video/*" />
                <data android:mimeType="image/*" />
                <data android:mimeType="audio/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />

                <category android:name="android.intent.category.DEFAULT" />

                <!-- Handle multiple shared files of various types -->
                <data android:mimeType="video/*" />
                <data android:mimeType="image/*" />
                <data android:mimeType="audio/*" />
            </intent-filter>
        </activity>
        <activity
            android:name=".intentss.RedirectToAppActivity"
            android:exported="false" />
        <activity
            android:name=".intentss.DisplayActivity"
            android:exported="true" />
        <activity
            android:name=".intentss.IntentActivitry_1"
            android:exported="true" />
        <activity
            android:name=".intentss.IntentAcitvity_0"
            android:exported="false" />
        <activity
            android:name=".intentss.ActivityLifecycle"
            android:exported="false" />
        <activity
            android:name=".widgets.MixUIs"
            android:exported="false" />
        <activity
            android:name=".widgets.ToggleButtons"
            android:exported="false" />
        <activity
            android:name=".widgets.CustomButtons"
            android:exported="false" />
        <activity
            android:name=".widgets.MainActivity"
            android:exported="false" />
        <activity
            android:name=".widgets.CustomToast"
            android:exported="false" />
    </application>

</manifest>